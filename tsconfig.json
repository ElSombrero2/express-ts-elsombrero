{
  "compilerOptions": {
    "allowJs": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*", "test"],
  "exclude": ["node_modules", "dist", "views"]
}